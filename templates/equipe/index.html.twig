{% extends 'base.html.twig' %}

{% block title %}Liste des équipes{% endblock %}

{% block body %}
    <h1 class="pt-2 text-center">Liste des équipes</h1>
    <a class= "btn btn-success"href="{{ path('app_equipe_new') }}">Créer une nouvelle équipe</a>

    <table class="table">
        <thead>
            <tr>
                <th>Image<th>
                <th>Nom de l'équipe</th>
                <th>Que veux tu faire ?</th>
            </tr>
        </thead>
        <tbody>
        {% for equipe in equipes %}
            <tr>
                <td><img src="/img/equipe/{{ equipe.image }}" width="50px" height="50px" alt=""></td>
                  <td></td>
                <td>{{ equipe.libelle }}</td>
                <td>
                    <a class= "btn btn-info" href="{{ path('app_equipe_show', {'id': equipe.id}) }}">Voir la fiche</a>
                    <a class= "btn btn-warning" href="{{ path('app_equipe_edit', {'id': equipe.id}) }}">Modifier l'équipe</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas d'équipe trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
